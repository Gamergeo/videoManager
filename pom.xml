<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>com.gamergeo.project</groupId>
	<artifactId>videomanager</artifactId>
	<version>${revision}</version>
	<packaging>pom</packaging>
  
	<modules>
		<module>videomanager-gui</module>
		<module>videomanager-model</module>
		<module>videomanager-service</module>
	</modules>
	
	<properties>
		<revision>0.1.4</revision>
		<java.version>21</java.version>
    	<javafx.version>21</javafx.version>	
	    <encoding>UTF-8</encoding>
    	<project.build.sourceEncoding>${encoding}</project.build.sourceEncoding>
    	
		<spring.version>6.1.3</spring.version>	
    	<maven-compiler-plugin.version>3.12.1</maven-compiler-plugin.version>
    	<flatten-maven-plugin.version>1.6.0</flatten-maven-plugin.version>
		<javafx.version>21.0.1</javafx.version>
    	<javafx.maven.plugin.version>0.0.8</javafx.maven.plugin.version>
    	<maven.shade.plugin.version>3.5.1</maven.shade.plugin.version>
    	<jaxb-api.version>2.3.1</jaxb-api.version>
    	
    	<gamlib.version>0.1.1</gamlib.version>
	</properties>
	
	
	<build>
	    <plugins>
			<!-- java compiler (pour avoir la bonne version de java systématiquement -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<release>${java.version}</release>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
				</configuration>
			</plugin>
			
			<!-- Plugin for local execution -->
			<plugin>
				<groupId>org.openjfx</groupId>
	    		<artifactId>javafx-maven-plugin</artifactId>
	    		<version>${javafx.maven.plugin.version}</version>
			    <configuration>
	      			<mainClass>com.gamergeo.project.videomanager.gui.application.VideoManagerApplication</mainClass>
	    		</configuration>
	    		<executions>
					<execution>
	                    <!-- Configuration for debugging -->
	                    <id>debug</id>
	                    <configuration>
	                        <options>
	                            <option>-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=*:8001</option>
	                        </options>
	                        <mainClass>com.gamergeo.project.videomanager.gui.application.VideoManagerApplication</mainClass>
	                    </configuration>
	                </execution>
	           </executions>
	  		</plugin>
	    
	    	<!-- Plugin for deployment -->
	    	<plugin>
	    		<groupId>org.apache.maven.plugins</groupId>
	    		<artifactId>maven-shade-plugin</artifactId>
	    		<version>${maven.shade.plugin.version}</version>
	    		<executions>
	        		<execution>
	            		<phase>package</phase>
	            		<goals>
	                		<goal>shade</goal>
	            		</goals>
	            		<configuration>
	                		<transformers>
	                    		<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
	                        		<mainClass>com.gamergeo.project.mastermind.gui.Main</mainClass>
	                    		</transformer>
	                		</transformers>
	            		</configuration>
	        		</execution>
	    		</executions>
			</plugin>
			
			<!-- Indispensable pour écrire en dur le pom !-->
			<plugin>
		    	<groupId>org.codehaus.mojo</groupId>
			    <artifactId>flatten-maven-plugin</artifactId>
			    <version>${flatten-maven-plugin.version}</version>
			    <executions>
					<!-- enable flattening -->
					<execution>
			        	<id>flatten</id>
			        	<phase>process-resources</phase>
			        	<goals>
			          		<goal>flatten</goal>
			        	</goals>
			      	</execution>
			      	<!-- ensure proper cleanup -->
			      	<execution>
			        	<id>flatten.clean</id>
			        		<phase>clean</phase>
			        		<goals>
			          			<goal>clean</goal>
			        		</goals>
		      		</execution>
		   		</executions>
			</plugin>
		</plugins>
	</build>
  
	<!-- Dependencies Management (No import their, check module instead) -->
	<dependencyManagement>
		<dependencies>

			<!-- Project dependency -->
			<dependency>
				<groupId>com.gamergeo.project</groupId>
				<artifactId>videomanager-model</artifactId>
				<version>${revision}</version>
			</dependency>
			<dependency>
				<groupId>com.gamergeo.project</groupId>
				<artifactId>videomanager-service</artifactId>
				<version>${revision}</version>
			</dependency>
			
			<!-- Gamergeo lib -->
			<dependency>
				<groupId>com.gamergeo.lib</groupId>
				<artifactId>gamlib</artifactId>
				<version>${gamlib.version}</version>
			</dependency>

			<!-- Spring BOM -->
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-framework-bom</artifactId>
				<version>${spring.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			
			<!-- Javafx -->
			<dependency>
			    <groupId>org.openjfx</groupId>
			    <artifactId>javafx-controls</artifactId>
			    <version>${javafx.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.openjfx</groupId>
			    <artifactId>javafx-graphics</artifactId>
			    <version>${javafx.version}</version>
			</dependency>
			<dependency>
			    <groupId>org.openjfx</groupId>
			    <artifactId>javafx-fxml</artifactId>
			    <version>${javafx.version}</version>
			</dependency>
			
			<!-- Mapping XML -->
			<dependency>
			    <groupId>javax.xml.bind</groupId>
			    <artifactId>jaxb-api</artifactId>
			    <version>${jaxb-api.version}</version>
			</dependency>

		</dependencies>
	</dependencyManagement>
</project>
