<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" styleClass="tag-border-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamergeo.project.videomanager.view.tag.TagView">
<!--   onMouseClicked="#onClick" onDragDetected="#dragTag"  -->
   <right>
      <Button fx:id="delete" mnemonicParsing="false" text="x" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <VBox alignment="CENTER" fillWidth="false" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="label" alignment="CENTER" VBox.vgrow="ALWAYS" />
            <TextField fx:id="labelEdit" alignment="CENTER" />
         </children>
         <BorderPane.margin>
            <Insets left="2.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
