<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.Rating?>

<VBox styleClass="default-spacing" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamergeo.project.videomanager.view.search.SearchView">
   <children>
      <TitledPane expanded="false" text="Search">
         <content>
            <VBox spacing="5">
               <children>
                  <TextField fx:id="title" promptText="Search Title..." />
            	  <Rating fx:id="rating" max="5" partialRating="true" />
                  <SplitPane fx:id="searchTags" dividerPositions="0.5" />
               </children>
            </VBox>
         </content>
      </TitledPane>
      <HBox alignment="CENTER_RIGHT" styleClass="buttonLine">
         <children>
            <Button alignment="CENTER" fx:id="reset" text="Reset" />
            <Button alignment="CENTER" fx:id="random" text="Random" />
         </children>
      </HBox>
   </children>
</VBox>
