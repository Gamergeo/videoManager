<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="default-spacing" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamergeo.project.videomanager.gui.controller.VideoSearchController">
   <children>
      <TitledPane expanded="false" text="Search">
         <content>
            <VBox>
               <children>
                  <TextField fx:id="titleSearchField" promptText="Search Title..." />
                  <SplitPane dividerPositions="0.5">
                    <items>
                        <VBox onDragDropped="#dropTagWith" onDragOver="#dragOver">
                           <children>
                              <Label text="With :" />
                              <TilePane fx:id="withFlowPane" hgap="10.0" prefColumns="4" vgap="5.0" styleClass="searchTagPane" />
                           </children>
                        </VBox>
                        <VBox onDragDropped="#dropTagWithout" onDragOver="#dragOver">
                           <children>
                              <Label text="Without :" />
                              <TilePane fx:id="withoutFlowPane" hgap="10.0" prefColumns="4" vgap="5.0" styleClass="searchTagPane" />
                           </children>
                        </VBox>
                    </items>
                  </SplitPane>
               </children>
            </VBox>
         </content>
      </TitledPane>
      <HBox alignment="CENTER_RIGHT" styleClass="buttonLine">
         <children>
            <Button alignment="CENTER" onAction="#search" text="Search" />
            <Button alignment="CENTER" onAction="#reset" text="Reset" />
            <Button alignment="CENTER" onAction="#random" text="Random" />
         </children>
      </HBox>
   </children>
</VBox>
