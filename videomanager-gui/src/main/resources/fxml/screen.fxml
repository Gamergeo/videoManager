<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.Rating?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="BASELINE_RIGHT" styleClass="buttonLine" BorderPane.alignment="CENTER">
         <children>
<!--             <Button onAction="#disable" text="Disable" /> -->
         </children>
      </HBox>
   </bottom>
   <right>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </right>
   <center>
   <VBox styleClass="video" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" BorderPane.alignment="CENTER">
<!--       <VBox styleClass="video" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" BorderPane.alignment="CENTER" onDragDropped="#dropTags" onDragOver="#dragOver"> -->
         <children>
            <Label fx:id="title" />
            <Hyperlink fx:id="url" text="Access to video"/>
            <Label fx:id="date" />
            <Rating fx:id="rating" max="5" partialRating="true" />
            <TilePane fx:id="tags" hgap="10.0" prefColumns="4" vgap="5.0"/>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="30.0" left="20.0" />
   </padding>
</BorderPane>
