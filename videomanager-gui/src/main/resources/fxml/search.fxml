<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.Rating?>

<VBox styleClass="default-spacing" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TitledPane expanded="false" text="Search">
         <content>
            <VBox spacing="5">
               <children>
                  <TextField fx:id="title" promptText="Search Title..." />
            	  <Rating fx:id="rating" max="5" partialRating="true" />
                  <SplitPane dividerPositions="0.5">
                    <items>
                        <VBox>
<!--                         <VBox onDragDropped="#dropTagWith" onDragOver="#dragOver"> -->
                           <children>
                              <Label text="With :" />
                              <TilePane fx:id="withTags" hgap="10.0" prefColumns="4" vgap="5.0" styleClass="searchTagPane" />
                           </children>
                        </VBox>
                        <VBox>
<!--                         <VBox onDragDropped="#dropTagWithout" onDragOver="#dragOver"> -->
                           <children>
                              <Label text="Without :" />
                              <TilePane fx:id="withoutTags" hgap="10.0" prefColumns="4" vgap="5.0" styleClass="searchTagPane" />
                           </children>
                        </VBox>
                    </items>
                  </SplitPane>
               </children>
            </VBox>
         </content>
      </TitledPane>
      <HBox alignment="CENTER_RIGHT" styleClass="buttonLine">
         <children>
            <Button alignment="CENTER" onAction="#reset" text="Reset" />
            <Button alignment="CENTER" onAction="#random" text="Random" />
         </children>
      </HBox>
   </children>
</VBox>
